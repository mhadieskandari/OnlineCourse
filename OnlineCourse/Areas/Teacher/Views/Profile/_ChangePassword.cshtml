@model OnlineCourse.Panel.Utils.ViewModels.AccountViewModels.ChangePasswordClientViewModel

<div class="modal fade" id="changePass" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <form asp-action="ChangePassword" asp-controller="Profile" method="post">
                <input type="hidden" asp-for="UserId" />
                <div class="modal-header" style="padding: 10px !important;">
                    <button type="button" class="close btn btn-sm" data-dismiss="modal">&times;</button>
                    <h5 class="modal-title">تغییر رمز عبور</h5>
                </div>
                <div class="modal-body">
                    <input type="hidden" value="@Model.UserId" />
                    <div class="form-group col-sm-12">
                        <label asp-for="OldPass"></label>
                        <input type="password" asp-for="OldPass" class="form-control" style="direction:ltr;text-align: left">
                        <span asp-validation-for="OldPass" class="text-danger"></span>

                    </div>

                    <div class="form-group col-sm-12">
                        <label asp-for="NewPass"></label>
                        <input type="password" asp-for="NewPass" class="form-control" style="direction:ltr;text-align: left">
                        <span asp-validation-for="NewPass" class="text-danger"></span>

                    </div>
                    <div class="form-group col-sm-12">
                        <label asp-for="ConfirmNewPass"></label>
                        <input type="password" asp-for="ConfirmNewPass" class="form-control" style="direction:ltr;text-align: left">
                        <span asp-validation-for="ConfirmNewPass" class="text-danger"></span>

                    </div>
                </div>
                <div class="modal-footer" style="border:none !important;">
                    <button type="button" class="btn btn-sm btn-default pull-left" data-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn  btn-sm  btn-success pull-right">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>