@model IEnumerable<Present>
@{
    ViewData["Title"] = "صفحه اصلی";
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <div class="info-box-icon bg-aqua">
                    <span class="fa fa-cogs"></span>
                </div>
                <div class="info-box-content">
                    <div class="info-box-text">
                        <span> کلاسهای آنلاین</span>
                    </div>
                    <div class="info-box-number">
                        <span>12</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <div class="info-box-icon bg-aqua">
                    <span class="fa fa-cogs"></span>
                </div>
                <div class="info-box-content">
                    <div class="info-box-text">
                        <span> کلاسهای آنلاین</span>
                    </div>
                    <div class="info-box-number">
                        <span>12</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <div class="info-box-icon bg-aqua">
                    <span class="fa fa-cogs"></span>
                </div>
                <div class="info-box-content">
                    <div class="info-box-text">
                        <span> کلاسهای آنلاین</span>
                    </div>
                    <div class="info-box-number">
                        <span>12</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box">
                <div class="info-box-icon bg-red">
                    <span class="fa fa-cogs"></span>
                </div>
                <div class="info-box-content">
                    <div class="info-box-text">
                        <span> کلاسهای آنلاین</span>
                    </div>
                    <div class="info-box-number">
                        <span>12</span>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="box">
            <div class="box-header with-border">
                <b class="box-title">لیست دروس فعال </b>
            </div>

            @if (!Model.Any())
            {
                <div class="panel panel-default">
                    <div class="panel-body text-center">
                        <i class="fa fa-database fa-4x" aria-hidden="true"></i>
                        <hr />
                        <h5 class="text-center">اطلاعاتی برای نمایش وجود ندارد</h5>
                    </div>
                </div>

            }
            else
            {

                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>

                                    <th style="width: 1px">
                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Section.Course.CourseName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Section.Activity)
                                    </th>
                                    
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Section.Course.CourseName)
                                        </td>
                                        
                                        <td>
                                            @if (item.Section.Activity != null)
                                            {
                                                @EnumExtention.GetDescription((ActiveState)item.Section.Activity)
                                            }
                                        </td>

                                        <td class="table-action">
                                            <a asp-action="PresentDetails" asp-controller="Sections" asp-route-presentId="@item.Id" class="btn btn-sm  btn-default" title="جزئیات" target="_blank"> <i class="fa fa-eye"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            }
        </div>
    </div>

</section>