@using Microsoft.AspNetCore.Mvc.Rendering
@using OnlineCourse.Core
@using OnlineCourse.Core.Extentions
@*@model OnlineCourse.Entity.Models.User*@
@model OnlineCourse.Panel.Utils.ViewModels.Areas.Admin.CreateUserViewModel

@{
    ViewData["Title"] = "ایجاد کاربر جدید";
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12 col-lg-10 col-sm-12 col-xs-12 col-center-md ">
            @*@Html.Partial("/Views/Shared/_Notifications.cshtml")*@
            <form asp-action="Create" method="Post" enctype="multipart/form-data">
                <div class="box">
                    <div class="box-header">
                        <b>@ViewData["Title"]</b>
                        <hr />
                    </div>
                    <div class="box-body">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="UserName" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="UserName" class="form-control" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="Email" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="Pwd" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Pwd" class="form-control" type="password" />
                                        <span asp-validation-for="Pwd" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="Mobile" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Mobile" class="form-control" />
                                        <span asp-validation-for="Mobile" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="FullName" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="FullName" class="form-control" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="Position" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Position" class="form-control" />
                                        <span asp-validation-for="Position" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="ExpireDate" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="ExpireDate" class="form-control" />
                                        <span asp-validation-for="ExpireDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="WorkDays" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="WorkDays" class="form-control" />
                                        <span asp-validation-for="WorkDays" class="text-danger"></span>
                                    </div>
                                </div>

                                @*<div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="State" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.State,
                                            Html.GetEnumKeyDescriptionSelectList<UserState>(null),
                                                new Dictionary<string, object>
                                                {
                                                    {"class", "form-control"},
                                                    {"data-rule-required", "true"},
                                                })
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>
                                </div>*@

                                @*<div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="OnOff" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.OnOff,
                                            Html.GetEnumKeyDescriptionSelectList<GeneralState>(null),
                                                new Dictionary<string, object>
                                                {
                                                    {"class", "form-control"},
                                                    {"data-rule-required", "true"},
                                                })
                                        <span asp-validation-for="OnOff" class="text-danger"></span>
                                    </div>
                                </div>*@

                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="AccessLevel" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.AccessLevel,
                                            Html.GetEnumKeyDescriptionSelectList<UserAccessLevel>(null),
                                                new Dictionary<string, object>
                                                {
                                                    {"class", "form-control"},
                                                    {"data-rule-required", "true"},
                                                }
                                            )
                                        <span asp-validation-for="AccessLevel" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    @Html.LabelFor(m => m.City, new { @class = "control-label col-md-3" })

                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.City, new List<SelectListItem>
                                            {
                                                new SelectListItem {Text = "آذربایجان شرقی", Value = "آذربایجان شرقی"},
                                                new SelectListItem {Text = "آذربایجان غربی", Value = "آذربایجان غربی"},
                                                new SelectListItem {Text = "اردبیل", Value = "اردبیل"},
                                                new SelectListItem {Text = "اصفهان", Value = "اصفهان"},
                                                new SelectListItem {Text = "البرز", Value = "البرز"},
                                                new SelectListItem {Text = "ایلام", Value = "ایلام"},
                                                new SelectListItem {Text = "بوشهر", Value = "بوشهر"},
                                                new SelectListItem {Text = "تهران", Value = "تهران"},
                                                new SelectListItem {Text = "چهارمحال و بختیاری", Value = "چهارمحال و بختیاری"},
                                                new SelectListItem {Text = "خراسان جنوبی", Value = "خراسان جنوبی"},
                                                new SelectListItem {Text = "خراسان رضوی", Value = "خراسان رضوی"},
                                                new SelectListItem {Text = "خراسان شمالی", Value = "خراسان شمالی"},
                                                new SelectListItem {Text = "خوزستان", Value = "خوزستان"},
                                                new SelectListItem {Text = "زنجان", Value = "زنجان"},
                                                new SelectListItem {Text = "سمنان", Value = "سمنان"},
                                                new SelectListItem {Text = "سیستان و بلوچستان", Value = "سیستان و بلوچستان"},
                                                new SelectListItem {Text = "فارس", Value = "فارس"},
                                                new SelectListItem {Text = "قزوین", Value = "قزوین"},
                                                new SelectListItem {Text = "قم", Value = "قم"},
                                                new SelectListItem {Text = "کردستان", Value = "کردستان"},
                                                new SelectListItem {Text = "کرمان", Value = "کرمان"},
                                                new SelectListItem {Text = "کرمانشاه", Value = "کرمانشاه"},
                                                new SelectListItem {Text = "کهگیلویه و بویراحمد", Value = "کهگیلویه و بویراحمد"},
                                                new SelectListItem {Text = "گلستان", Value = "گلستان"},
                                                new SelectListItem {Text = "گیلان", Value = "گیلان"},
                                                new SelectListItem {Text = "لرستان", Value = "لرستان"},
                                                new SelectListItem {Text = "مازندران", Value = "مازندران"},
                                                new SelectListItem {Text = "مرکزی", Value = "مرکزی"},
                                                new SelectListItem {Text = "هرمزگان", Value = "هرمزگان"},
                                                new SelectListItem {Text = "همدان", Value = "همدان"},
                                                new SelectListItem {Text = "یزد", Value = "یزد"},

                                            }, new Dictionary<string, object>
                                            {
                                                {"class", "form-control"},
                                                {"data-rule-required", "true"},
                                                {"data-msg-required", "پر نمودن این فیلد اجباری است"},
                                            })
                                        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label class="col-md-3 control-label">Image</label>
                                    <div class="col-md-9">
                                        <input type="file" name="Image" id="Image" class="form-control" />
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="Addrress" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <textarea asp-for="Addrress" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="Addrress" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-sm-12 col-xs-12">
                                    <label asp-for="Des" class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <textarea asp-for="Des" class="form-control" rows="5"></textarea>
                                        <span asp-validation-for="Des" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="box-footer">
                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-success  pull-right"><i class="fa fa-save"></i></button>
                            </div>
                            <div class="col-md-6">
                                <a asp-action="Index" class="btn btn-info  pull-left"><i class="fa fa-backward"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>




        </div>


    </div>
    <!-- /.row -->
</section>
<!-- /.content -->




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("[name=ExpireDate")
                .datepicker({
                    dateFormat: "yy/mm/dd",
                    //minDate: "0",
                    isRTL: true,
                    //maxDate: "+30D"
                });

        });


    </script>
}

