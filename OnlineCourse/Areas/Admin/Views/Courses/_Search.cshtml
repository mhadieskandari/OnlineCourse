@model OnlineCourse.Entity.Models.Course
   
<div class="box">
    <div class="box-header with-border">
        <button type="button" title="باز/بسته" class="btn btn-default btn-sm box-button" data-toggle="collapse" data-target="#collapse" aria-expanded="false" aria-controls="collapse"><i class="fa fa-plus"></i></button>
        <p class="box-title" style="margin-bottom: 5px;"><i class="fa fa-search"></i> <b> جستجوی درس  </b></p>
    </div>
    <form asp-action="Index" method="get">

        <div class="collapse" id="collapse">
            <div class="box-body clearfix ">
                <div class="col-md-4 form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" value='@(HttpContextAccessor.HttpContext.Request.Query["Name"].ToString())' />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Level" class="control-label"></label>
                    @{ 
                        EducationLevel? selected=null;
                        if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Request.Query["Level"].ToString())) {
                            selected =(EducationLevel) byte.Parse(HttpContextAccessor.HttpContext.Request.Query["Level"].ToString());
                        }
                    }
                    <select asp-for="Level" class="form-control" asp-items='Html.GetEnumKeyDescriptionSelectList<EducationLevel>(selected)'></select>
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>

            </div>
            <div class="box-footer">
                <button asp-action="Index" type="submit" class="btn btn-default btn-sm box-button"><i class="fa fa-search"></i></button>
            </div>
        </div>
    </form>
</div>