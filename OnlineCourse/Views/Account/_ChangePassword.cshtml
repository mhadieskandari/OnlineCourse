@model OnlineCourse.Panel.utilities.ViewModels.AccountViewModels.ChangePasswordViewModel
     
<div class="modal fade" id="changePass" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <form asp-action="ChangePassword" asp-controller="Account" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="modal-header" style="padding: 10px !important;">
                    <button type="button" class="close btn btn-sm" data-dismiss="modal">&times;</button>
                    <h5 class="modal-title">@localizer["ChangePassword"]</h5>
                </div>
                <div class="modal-body">
                    <input type="hidden" value="@Model.Id" />
                    <div class="form-group col-sm-12">
                        <label asp-for="OldPass"></label>
                        <input asp-for="OldPass" type="password" class="form-control" style="direction:ltr;text-align: left">
                        <span asp-validation-for="OldPass" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-12">
                        <label asp-for="NewPass"></label>
                        <input type="password" asp-for="NewPass" class="form-control" style="direction:ltr;text-align: left">
                        <span asp-validation-for="NewPass" class="text-danger"></span>

                    </div>
                    <div class="form-group col-sm-12">
                        <label asp-for="ConfirmNewPass"></label>
                        <input type="password" asp-for="ConfirmNewPass" class="form-control" style="direction:ltr;text-align: left">
                        <span asp-validation-for="ConfirmNewPass" class="text-danger"></span>

                    </div>
                </div>
                <div class="modal-footer" style="border:none !important;">
                    <button type="button" class="btn btn-sm btn-default pull-left" data-dismiss="modal">@localizer["Cancel"]</button>
                    <button type="submit" class="btn  btn-sm  btn-success pull-right">@localizer["Save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>