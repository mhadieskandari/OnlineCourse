@model OnlineCourse.Panel.Utils.ViewModels.AccountViewModels.SendCodeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = localizer["SendVerificatioCode"];
}
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-11" style="float: none; margin:30px auto">
        <div class="login-box">
            <div class="login-logo">
            </div>
            <div class="login-box-body">
                @*@Html.Partial("/Views/Shared/_Notifications.cshtml")*@
                <form asp-controller="Account" asp-action="SendCode" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <h5 class="text-center">@localizer["Verification"]</h5>
                    <hr />
                    <span asp-validation-summary="All" class="text-danger"></span>
                    <span asp-validation="Success" class="text-success"></span>
                    @if (string.IsNullOrEmpty(Model.Email))
                    {
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <input asp-for="Email" type="hidden" />
                    }
                    <div class="form-group">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">@localizer["SendVerificationCode"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}