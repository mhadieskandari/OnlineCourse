@model OnlineCourse.Panel.Utils.ViewModels.AccountViewModels.ChangePasswordClientViewModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
}
<style>
    .form-group select {
        padding: 1px;
    }
</style>
@*@Html.BuildBreadcrumbNavigation(localizer)*@
<section class="contact-page inner-page">
    <div class="container">
        <div class="row">

            <div class="col-md-5" style="float: none; margin:30px auto">
                <div class="header">@ViewData["Title"]</div>
                @*@Html.Partial("/Views/Shared/_Notifications.cshtml")*@


                <div class="widget" >
                    <div class="widget-body">
                        <form asp-controller="Account" asp-action="ChangePassword" method="post" class="form-horizontal">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="hidden" asp-for="UserId" />
                            <div class="row">

                                <div class="form-group col-sm-12">
                                    <label asp-for="OldPass"></label>
                                    <input asp-for="OldPass" type="password" class="form-control" style="direction:ltr;text-align: left">
                                    <span asp-validation-for="OldPass" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-12">
                                    <label asp-for="NewPass"></label>
                                    <input asp-for="NewPass" type="password" class="form-control" style="direction:ltr;text-align: left">
                                    <span asp-validation-for="NewPass" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-12">
                                    <label asp-for="ConfirmNewPass"></label>
                                    <input asp-for="ConfirmNewPass" type="password" class="form-control" style="direction:ltr;text-align: left">
                                    <span asp-validation-for="ConfirmNewPass" class="text-danger"></span>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-6">
                                    <button type="submit" class="btn theme-btn pull-right">تغییر رمز عبور</button>
                                </div>
                                <div class="col-sm-6">
                                    <a asp-action="Index" asp-controller="Home" class="btn theme-btn-dash pull-left">بازگشت</a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- end: Widget -->
                </div>


            </div>




            <!-- /REGISTER -->
        </div>

    </div>
</section>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

